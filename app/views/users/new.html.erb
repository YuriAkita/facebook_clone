<h1>アカウント作成</h1>
<p>簡単に作成できます。</p>
<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this <%= @user.name %> from being saved:</h2>
    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<%= form_with(model: @user, local: true) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, class:"form-area" %>
  <%= f.label :email %>
  <%= f.email_field :email, class:"form-area"  %>
  <%= f.label :password %>
  <%= f.password_field :password, class:"form-area"  %>
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation, class:"form-area"  %><br>
  <%= f.submit "アカウント作成" , class:"create-btn" %>
<% end %>
