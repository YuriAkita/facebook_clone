<h1>FacebookCloneにログイン</h1>
<%= form_with(scope: :session, url: sessions_path, local: true) do |f| %>
  <%= f.label :email %>
  <%= f.email_field :email , class:"form-area"%>
  <%= f.label :password %>
  <%= f.password_field :password , class:"form-area"%><br>
  <%= f.submit "ログイン" ,class:"login-btn"%>
  <p>または</p>
  <%= link_to "新しいアカウントを作成", new_user_path ,class:"create-btn" %>
<% end %>
